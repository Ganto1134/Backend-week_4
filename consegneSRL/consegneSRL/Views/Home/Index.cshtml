@model IEnumerable<YourNamespace.Models.Cliente>

@{
    ViewData["Title"] = "Elenco Clienti";
}

<h1>Elenco Clienti</h1>

<p>
    <a asp-action="Create">Crea Nuovo Cliente</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Cognome</th>
            <th>Codice Fiscale</th>
            <th>Partita IVA</th>
            <th>Azioni</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cliente in Model)
        {
            <tr>
                <td>@cliente.Nome</td>
                <td>@cliente.Cognome</td>
                <td>@cliente.CodiceFiscale</td>
                <td>@cliente.PartitaIVA</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@cliente.Id">Modifica</a> |
                    <a asp-action="Details" asp-route-id="@cliente.Id">Dettagli</a> |
                    <a asp-action="Delete" asp-route-id="@cliente.Id">Elimina</a>
                </td>
            </tr>
        }
    </tbody>
</table>
