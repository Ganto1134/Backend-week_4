@model consegneSRL.Models.Spedizione

@{
    ViewData["Title"] = "Dettagli Spedizione";
}

<h1>Dettagli Spedizione</h1>

<div>
    <h4>Spedizione</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Numero Identificativo
        </dt>
        <dd class="col-sm-10">
            @Model.NumeroIdentificativo
        </dd>
        <dt class="col-sm-2">
            Cliente
        </dt>
        <dd class="col-sm-10">
            @Model.Cliente.Nome @Model.Cliente.Cognome
        </dd>
        <dt class="col-sm-2">
            Data Spedizione
        </dt>
        <dd class="col-sm-10">
            @Model.DataSpedizione.ToShortDateString()
        </dd>
        <dt class="col-sm-2">
            Nominativo Destinatario
        </dt>
        <dd class="col-sm-10">
            @Model.NominativoDestinatario
        </dd>
        <dt class="col-sm-2">
            Città Destinataria
        </dt>
        <dd class="col-sm-10">
            @Model.CittàDestinataria
        </dd>
        <dt class="col-sm-2">
            Data Consegna Prevista
        </dt>
        <dd class="col-sm-10">
            @Model.DataConsegnaPrevista.ToShortDateString()
        </dd>
    </dl>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id">Modifica</a> |
        <a asp-action="Index">Torna all'elenco</a>
    </div>
</div>

